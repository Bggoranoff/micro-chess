<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IconsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iconsListLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chooseIconBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="64dp"
            android:alpha=".7"
            android:background="@drawable/rounded_table"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chooseIconLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:id="@+id/iconTableScrollView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                    <TableLayout
                        android:id="@+id/chooseIconTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:alpha="1.0"
                                app:srcCompat="@drawable/black_bishop"
                                android:contentDescription="@string/black_bishop"
                                android:tag="black_bishop"
                                android:id="@+id/blackBishopIcon" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/white_bishop"
                                android:contentDescription="@string/white_bishop"
                                android:tag="white_bishop"
                                android:id="@+id/whiteBishopIcon"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/black_knight"
                                android:contentDescription="@string/black_knight"
                                android:tag="black_knight"
                                android:id="@+id/blackKnightIcon" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/white_knight"
                                android:contentDescription="@string/white_knight"
                                android:tag="white_knight"
                                android:id="@+id/whiteKnightIcon" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/black_king"
                                android:contentDescription="@string/black_king"
                                android:tag="black_king"
                                android:id="@+id/blackKingIcon" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/white_king"
                                android:contentDescription="@string/white_king"
                                android:tag="white_king"
                                android:id="@+id/whiteKingIcon" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/black_queen"
                                android:contentDescription="@string/black_queen"
                                android:tag="black_queen"
                                android:id="@+id/blackQueenIcon" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/white_queen"
                                android:contentDescription="@string/white_queen"
                                android:tag="white_queen"
                                android:id="@+id/whiteQueenIcon" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/black_rook"
                                android:contentDescription="@string/black_rook"
                                android:tag="black_rook"
                                android:id="@+id/blackRookIcon" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/white_rook"
                                android:contentDescription="@string/white_rook"
                                android:tag="white_rook"
                                android:id="@+id/whiteRookIcon" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/black_pawn"
                                android:contentDescription="@string/black_pawn"
                                android:tag="black_pawn"
                                android:id="@+id/blackPawnIcon" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/white_pawn"
                                android:contentDescription="@string/white_pawn"
                                android:tag="white_pawn"
                                android:id="@+id/whitePawnIcon" />

                        </TableRow>

                    </TableLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/chooseIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="40dp"
            android:text="@string/choose"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>